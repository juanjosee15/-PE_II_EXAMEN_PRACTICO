@model proyecto_peti.Models.AnalisisFODA

@{
    ViewBag.Title = "Análisis FODA";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card p-4 shadow-sm">
        <h2 class="text-center mb-4 text-white bg-success py-2 rounded">5. ANÁLISIS INTERNO Y EXTERNO (FODA)</h2>

        <p>
            El <strong>Análisis FODA</strong> permite identificar las fortalezas, debilidades, oportunidades y amenazas de la empresa.
            Es fundamental para definir estrategias realistas basadas en el entorno interno y externo.
        </p>

        @using (Html.BeginForm("Index", "AnalisisFODA", FormMethod.Post))
        {
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold text-success">Fortalezas</label>
                    @Html.TextAreaFor(m => m.Fortalezas, new { @class = "form-control", rows = 5, placeholder = "¿Cuáles son los principales puntos fuertes de la empresa?" })
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold text-danger">Debilidades</label>
                    @Html.TextAreaFor(m => m.Debilidades, new { @class = "form-control", rows = 5, placeholder = "¿Qué aspectos internos limitan su desempeño?" })
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="form-label fw-bold text-primary">Oportunidades</label>
                    @Html.TextAreaFor(m => m.Oportunidades, new { @class = "form-control", rows = 5, placeholder = "¿Qué oportunidades ofrece el entorno externo?" })
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold text-warning">Amenazas</label>
                    @Html.TextAreaFor(m => m.Amenazas, new { @class = "form-control", rows = 5, placeholder = "¿Qué amenazas externas podrían afectar negativamente?" })
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index", "Objetivos")" class="btn btn-secondary">🔙 4. OBJETIVOS</a>
                <button type="submit" class="btn btn-success">💾 GUARDAR</button>
                <a href="@Url.Action("Index", "CadenaValor")" class="btn btn-primary">6. CADENA DE VALOR 🔜</a>
            </div>
        }
    </div>
</div>
