@model proyecto_peti.Models.Users

@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #2563eb;
            --secondary: #7c3aed;
            --accent: #00d8ff;
            --bg-light: #f0f4f8;
            --bg-glass: rgba(255, 255, 255, 0.85);
            --text-dark: #1e293b;
            --text-light: #64748b;
        }

        body {
            background: linear-gradient(135deg, #e0f2fe 0%, #f0fdf4 50%, #fef2f2 100%);
            font-family: 'Roboto', sans-serif;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
            color: var(--text-dark);
            overflow: hidden;
            position: relative;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: radial-gradient(circle at 20% 30%, rgba(37, 99, 235, 0.1) 0%, transparent 30%), radial-gradient(circle at 80% 70%, rgba(124, 58, 237, 0.1) 0%, transparent 30%), radial-gradient(circle at 50% 20%, rgba(0, 216, 255, 0.1) 0%, transparent 25%);
                z-index: 0;
            }

        .login-container {
            position: relative;
            width: 100%;
            max-width: 420px;
            z-index: 2;
        }

        .login-card {
            background: var(--bg-glass);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-radius: 24px;
            padding: 2.5rem;
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05), inset 0 0 15px rgba(255, 255, 255, 0.5);
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .login-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1), inset 0 0 20px rgba(255, 255, 255, 0.8);
            }

            .login-card::after {
                content: '';
                position: absolute;
                top: -2px;
                left: -2px;
                right: -2px;
                bottom: -2px;
                background: linear-gradient(45deg, var(--primary), var(--secondary), var(--accent));
                z-index: -1;
                border-radius: 26px;
                opacity: 0.7;
                animation: borderRotate 8s linear infinite;
            }

        .brand-logo {
            font-family: 'Orbitron', sans-serif;
            font-size: 2.8rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-align: center;
            background: linear-gradient(to right, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 2px;
            position: relative;
            display: inline-block;
            width: 100%;
        }

            .brand-logo::after {
                content: '';
                position: absolute;
                bottom: -8px;
                left: 50%;
                transform: translateX(-50%);
                width: 60px;
                height: 3px;
                background: linear-gradient(to right, var(--primary), var(--accent));
                border-radius: 3px;
            }

        h2 {
            font-family: 'Orbitron', sans-serif;
            text-align: center;
            margin-bottom: 1rem;
            color: var(--text-dark);
            font-weight: 500;
            letter-spacing: 1px;
        }

        .subtitle {
            text-align: center;
            margin-bottom: 2rem;
            color: var(--text-light);
            font-size: 0.95rem;
            font-weight: 300;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.7);
            border: 1px solid rgba(0, 0, 0, 0.08);
            color: var(--text-dark);
            border-radius: 12px;
            padding: 14px 20px;
            margin-bottom: 1.5rem;
            transition: all 0.3s;
            font-size: 0.95rem;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.03);
        }

            .form-control:focus {
                background: rgba(255, 255, 255, 0.9);
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.2);
                outline: none;
            }

            .form-control::placeholder {
                color: var(--text-light);
                opacity: 0.7;
            }

        .btn-futurist {
            background: linear-gradient(to right, var(--primary), var(--secondary));
            color: white;
            border: none;
            border-radius: 12px;
            padding: 14px;
            font-weight: 500;
            letter-spacing: 0.5px;
            width: 100%;
            margin-bottom: 1rem;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
            font-family: 'Orbitron', sans-serif;
            box-shadow: 0 4px 15px rgba(37, 99, 235, 0.3);
        }

            .btn-futurist:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(37, 99, 235, 0.4);
            }

            .btn-futurist::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
                transition: 0.5s;
            }

            .btn-futurist:hover::before {
                left: 100%;
            }

        .link-futurist {
            color: var(--secondary);
            text-decoration: none;
            transition: all 0.3s;
            display: inline-block;
            font-weight: 500;
            position: relative;
        }

            .link-futurist:hover {
                color: var(--primary);
                transform: translateY(-1px);
            }

            .link-futurist::after {
                content: '';
                position: absolute;
                bottom: -2px;
                left: 0;
                width: 0;
                height: 2px;
                background: var(--primary);
                transition: width 0.3s;
            }

            .link-futurist:hover::after {
                width: 100%;
            }

        .floating-shapes {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
            pointer-events: none;
            overflow: hidden;
        }

        .shape {
            position: absolute;
            opacity: 0.15;
            filter: blur(30px);
        }

        .shape-1 {
            width: 200px;
            height: 200px;
            background: var(--primary);
            border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
            top: 10%;
            left: 5%;
            animation: float 15s infinite ease-in-out;
        }

        .shape-2 {
            width: 300px;
            height: 300px;
            background: var(--secondary);
            border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
            bottom: 10%;
            right: 5%;
            animation: float 18s infinite ease-in-out;
            animation-delay: 2s;
        }

        .shape-3 {
            width: 150px;
            height: 150px;
            background: var(--accent);
            border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
            top: 60%;
            left: 20%;
            animation: float 12s infinite ease-in-out;
            animation-delay: 4s;
        }

        keyframes float {
            0%

        {
            transform: translate(0, 0) rotate(0deg);
        }

        33% {
            transform: translate(30px, -50px) rotate(5deg);
        }

        66% {
            transform: translate(-20px, 40px) rotate(-5deg);
        }

        100% {
            transform: translate(0, 0) rotate(0deg);
        }

        }

        keyframes borderRotate {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
        }
    </style>
</head>
<body>
    <!-- Formas flotantes de fondo -->
    <div class="floating-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
    </div>

    <div class="login-container">
        <div class="login-card">
            <div class="brand-logo">AP</div>
            <h2>Iniciar sesión</h2>
            <p class="subtitle">Ingresa tus credenciales para continuar</p>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
            {
                <div class="mb-3">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Usuario", required = "required" })
                </div>

                <div class="mb-4">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña", required = "required" })
                </div>

                <button type="submit" class="btn btn-futurist">
                    <i class="fas fa-sign-in-alt me-2"></i> Ingresar
                </button>

                <div class="text-center mt-3">
                    <a href="@Url.Action("Register", "Account")" class="link-futurist">
                        <i class="fas fa-user-plus me-2"></i> Registrarse
                    </a>
                </div>

                if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger mt-4" style="background: rgba(255, 0, 0, 0.1); border-color: rgba(255, 0, 0, 0.2); color: #dc3545;">
                        @ViewBag.Message
                    </div>
                }
            }
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Validación de formulario
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
</body>
</html>