@model proyecto_peti.Models.Mision

@{
    ViewBag.Title = "Misión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .mission-card {
        background: linear-gradient(145deg, #ffffff, #f8f9fa);
        border-radius: 15px;
        border: none;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .mission-header {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
        padding: 1.5rem;
    }

    .feature-card {
        border-radius: 12px;
        border: none;
        background: white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        height: 100%;
        transition: box-shadow 0.3s ease;
    }

        .feature-card:hover {
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

    .example-card {
        border-left: 4px solid #667eea;
        background-color: white;
        transition: box-shadow 0.3s ease;
    }

        .example-card:hover {
            box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        }

    .mission-textarea {
        border-radius: 12px;
        border: 2px solid #e0e0e0;
        font-size: 1.1rem;
        min-height: 200px;
        padding: 1.5rem;
        background-color: #f8f9fa;
        box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        width: 100%;
        resize: none;
    }

        .mission-textarea:focus {
            border-color: #764ba2;
            box-shadow: 0 0 0 3px rgba(118, 75, 162, 0.2), inset 0 1px 3px rgba(0,0,0,0.05);
        }

    .btn-mission {
        border-radius: 10px;
        padding: 0.8rem 2rem;
        font-weight: 500;
        letter-spacing: 0.5px;
        transition: all 0.3s ease !important;
    }

    .btn-back {
        background: white;
        color: #5a5a5a;
        border: 1px solid #e0e0e0;
    }

    .btn-save {
        background: linear-gradient(135deg, #4CAF50, #66BB6A);
        color: white;
        box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
    }

    .btn-next {
        background: linear-gradient(135deg, #764ba2, #667eea);
        color: white;
        box-shadow: 0 4px 15px rgba(118, 75, 162, 0.3);
    }

    .icon-circle {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 1.8rem;
        color: white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .mission-divider {
        height: 2px;
        background: linear-gradient(to right, transparent, rgba(106, 17, 203, 0.3), transparent);
        margin: 2rem 0;
    }
</style>

<div class="container mt-4">
    <div class="mission-card">
        <!-- Encabezado -->
        <div class="mission-header text-center">
            <h2><i class="fas fa-rocket me-2"></i>1. MISIÓN DE TU EMPRESA</h2>
        </div>

        <div class="card-body p-4">
            <!-- Introducción -->
            <div class="alert mb-4" style="background: linear-gradient(to right, rgba(224, 247, 250, 0.9), rgba(178, 235, 242, 0.9)); border-left: 5px solid #00bcd4; border-radius: 8px;">
                <p class="lead mb-0" style="color: #006064; font-weight: 500;">
                    <i class="fas fa-info-circle me-2"></i> La <strong>MISIÓN</strong> es el ADN de tu organización
                </p>
            </div>

            <!-- Características -->
            <div class="row mb-4 g-4">
                <div class="col-md-4">
                    <div class="feature-card p-4 text-center">
                        <div class="icon-circle" style="background: linear-gradient(45deg, #ff9a9e, #fad0c4);">
                            <i class="fas fa-bullhorn"></i>
                        </div>
                        <h4 style="color: #ff6b6b;">Clara y Compartida</h4>
                        <p class="text-muted">Entendida por todos</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card p-4 text-center">
                        <div class="icon-circle" style="background: linear-gradient(45deg, #a18cd1, #fbc2eb);">
                            <i class="fas fa-heart"></i>
                        </div>
                        <h4 style="color: #8e44ad;">Centrada en Clientes</h4>
                        <p class="text-muted">Pone al mercado primero</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card p-4 text-center">
                        <div class="icon-circle" style="background: linear-gradient(45deg, #fbc2eb, #a6c1ee);">
                            <i class="fas fa-compass"></i>
                        </div>
                        <h4 style="color: #3498db;">Propósito Fundamental</h4>
                        <p class="text-muted">Define tu razón de ser</p>
                    </div>
                </div>
            </div>

            <!-- Divider -->
            <div class="mission-divider"></div>

            <!-- Contenido -->
            <div class="mb-4 p-4" style="background: linear-gradient(to right, rgba(245, 247, 250, 0.9), rgba(228, 232, 240, 0.9)); border-radius: 12px; position: relative;">
                <div style="position: absolute; top: 0; left: 0; width: 5px; height: 100%; background: linear-gradient(to bottom, #667eea, #764ba2);"></div>
                <h4 class="mb-3" style="color: #764ba2;">
                    <i class="fas fa-lightbulb me-2"></i> ¿Qué debe contener?
                </h4>
                <ul class="mission-list" style="list-style: none; padding-left: 0;">
                    <li class="mb-2"><i class="fas fa-check-circle me-2" style="color: #4CAF50;"></i> <strong>QUÉ</strong> hace tu empresa</li>
                    <li class="mb-2"><i class="fas fa-check-circle me-2" style="color: #4CAF50;"></i> <strong>POR QUÉ</strong> lo hace</li>
                    <li class="mb-2"><i class="fas fa-check-circle me-2" style="color: #4CAF50;"></i> <strong>PARA QUIÉN</strong> lo hace</li>
                    <li><i class="fas fa-check-circle me-2" style="color: #4CAF50;"></i> <strong>CÓMO</strong> lo hace</li>
                </ul>
            </div>

            <!-- Ejemplos -->
            <h4 class="mb-3" style="color: #764ba2;">
                <i class="fas fa-star me-2" style="color: #FFC107;"></i> Ejemplos
            </h4>
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <div class="example-card p-3 h-100">
                        <div class="d-flex align-items-center mb-2">
                            <div style="width: 30px; height: 30px; background-color: #FF7043; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 10px;">
                                <i class="fas fa-coffee"></i>
                            </div>
                            <h5 class="mb-0" style="color: #FF7043;">Cafetería</h5>
                        </div>
                        <p class="mb-0" style="font-style: italic; color: #555;">"Inspirar momentos de felicidad con el mejor café del mundo"</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="example-card p-3 h-100">
                        <div class="d-flex align-items-center mb-2">
                            <div style="width: 30px; height: 30px; background-color: #42A5F5; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 10px;">
                                <i class="fas fa-laptop-code"></i>
                            </div>
                            <h5 class="mb-0" style="color: #42A5F5;">Tecnología</h5>
                        </div>
                        <p class="mb-0" style="font-style: italic; color: #555;">"Empoderar a través de soluciones innovadoras"</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="example-card p-3 h-100">
                        <div class="d-flex align-items-center mb-2">
                            <div style="width: 30px; height: 30px; background-color: #66BB6A; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 10px;">
                                <i class="fas fa-leaf"></i>
                            </div>
                            <h5 class="mb-0" style="color: #66BB6A;">Sostenibilidad</h5>
                        </div>
                        <p class="mb-0" style="font-style: italic; color: #555;">"Crear un futuro más verde con productos ecoamigables"</p>
                    </div>
                </div>
            </div>

            <!-- Formulario -->
            @using (Html.BeginForm("Index", "Mision", FormMethod.Post))
            {
        <div class="mb-4">
            <label class="form-label fw-bold mb-3" style="font-size: 1.1rem; color: #764ba2;">
                <i class="fas fa-pencil-alt me-2"></i> Escribe tu Misión
            </label>

            @Html.TextAreaFor(m => m.Contenido, new
{
@class = "form-control mission-textarea",
style = "width: 100%; max-width: 10000px;", // 👈 ancho expandido
rows = 6,
placeholder = "Ejemplo: 'Nuestra misión es...'"
})
            <div class="text-end mt-2">
                <small style="color: #9e9e9e;">
                    <i class="fas fa-lightbulb me-1" style="color: #FFC107;"></i> Recomendado: 2-4 oraciones claras e inspiradoras
                </small>
            </div>
        </div>

                <!-- Botones -->
                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index", "Menu")" class="btn btn-lg btn-outline-secondary px-4 py-2" style="border-radius: 8px;">
                        <i class="fas fa-arrow-left me-2"></i>Volver al Índice
                    </a>
                    <button type="submit" class="btn btn-lg btn-success px-4 py-2" style="border-radius: 8px; background: linear-gradient(135deg, #4CAF50, #66BB6A); border: none; color: white; box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);">
                        <i class="fas fa-save me-2"></i>Guardar Misión
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<script>
    // Efectos visuales
    document.querySelectorAll('.feature-card, .example-card, .btn-mission').forEach(element => {
        element.addEventListener('mouseenter', function () {
            this.style.boxShadow = '0 10px 25px rgba(0,0,0,0.15)';
        });
        element.addEventListener('mouseleave', function () {
            if (this.classList.contains('btn-mission')) {
                this.style.boxShadow = this.classList.contains('btn-save')
                    ? '0 4px 15px rgba(76, 175, 80, 0.3)'
                    : this.classList.contains('btn-next')
                        ? '0 4px 15px rgba(118, 75, 162, 0.3)'
                        : 'none';
            } else {
                this.style.boxShadow = '';
            }
        });
    });
</script>
